<div class="container">
    <div class="alert alert-secondary text-center">
        <h1>All Posts</h1>
    </div>

    <table class="table table-bordered">
        <thead class="bg-dark text-center">
        <tr class="text-white">

            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Comments Allowed</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody class="text-center">
        {{#each posts}}
            <tr>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td>
                    <a href="/admin/posts/edit/{{_id}}" class="btn btn-sm btn-warning">Edit Post</a>
                </td>
            </tr>
        {{/each}}

        </tbody>
    </table>

</div>